<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender for human-readable logs -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender for JSON logs -->
    <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/log/banking-app/banking-app.json</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/var/log/banking-app/banking-app.%d{yyyy-MM-dd}.json</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
    </appender>

    <!-- File Appender for XML logs -->
    <appender name="XML_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/log/banking-app/banking-app.xml</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/var/log/banking-app/banking-app.%d{yyyy-MM-dd}.xml</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>
                <![CDATA[
                <log>
                    <timestamp>%d{yyyy-MM-dd HH:mm:ss}</timestamp>
                    <level>%level</level>
                    <logger>%logger</logger>
                    <message>%msg</message>
                    <thread>%thread</thread>
                </log>
                ]]>
            </pattern>
        </encoder>
    </appender>

    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="JSON_FILE"/>
        <appender-ref ref="XML_FILE"/>
    </root>
</configuration>
